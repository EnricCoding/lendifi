{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "node",
    "paths": {
      "@/hooks/*": ["hooks/*"],
      "@/lib/*":    ["lib/*"],
      "@/components/*": ["components/*"],
      "@/abis/*":   ["abis/*"],
    }
  }
}
